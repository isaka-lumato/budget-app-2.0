<p style="color: green"><%= notice %></p>

<h1>Categories</h1>
<div id="categories">
  <% @categories.each do |category| %>
    <div class="padding-6-px">
      <div class="category-container display-flex">
      <img src=<%= category.icon %>>
      <div>
      <p>
        <%= link_to category.name, category %>
      </p>
      <p>
        Total amount spent: <%= @user_transactions.where(categories_id: category.id).sum(:amount) %>
      </p>
      <p>
        <%= category.created_at %>

      </p>
      </div>
      </div>
        </div>
    <% end %>

</div>
<div class="padding-15-px">
  <div class="create-new-button-container text-align-center">
    <%= link_to "New category", new_category_path, class: "color-white text-decoration-none" %>
  </div>
</div>